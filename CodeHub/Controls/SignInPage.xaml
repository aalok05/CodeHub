<UserControl x:Class="CodeHub.Controls.SignInPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
             xmlns:control="using:CodeHub.Controls"
             xmlns:converter="using:CodeHub.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:local="using:CodeHub.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/codeBack.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="5" VerticalAlignment="Stretch">
            <interactivity:Interaction.Behaviors>
                <behaviors:Blur AutomaticallyStart="True"
                                Delay="0"
                                Value="30"
                                Duration="0" />
            </interactivity:Interaction.Behaviors>
        </Grid>

        <Image x:Name="AppLogoImage"
               Grid.Row="0"
               Width="100"
               Margin="0,0,0,20"
               VerticalAlignment="Bottom"
               Source="/Assets/Images/appLogoPurple.png">

            <interactivity:Interaction.Behaviors>
                <behaviors:Offset AutomaticallyStart="True"
                                  Delay="500"
                                  OffsetX="0"
                                  OffsetY="-35"
                                  Duration="1000" />
            </interactivity:Interaction.Behaviors>


        </Image>
        <TextBlock Grid.Row="1"
                   Margin="0,0,0,20"
                   FontSize="19"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Text="Welcome to CodeHub"
                   TextAlignment="Center">
            <interactivity:Interaction.Behaviors>
                <behaviors:Offset AutomaticallyStart="True"
                                  Delay="550"
                                  OffsetX="0"
                                  OffsetY="-30"
                                  Duration="1000" />
            </interactivity:Interaction.Behaviors>
        </TextBlock>
        <TextBlock Grid.Row="2"
                   Margin="0,0,0,20"
                   FontSize="14"
                   Foreground="White"
                   Text="Sign in to your GitHub account to continue"
                   TextAlignment="Center">
            <interactivity:Interaction.Behaviors>
                <behaviors:Offset AutomaticallyStart="True"
                                  Delay="560"
                                  OffsetX="0"
                                  OffsetY="-25"
                                  Duration="1000" />
            </interactivity:Interaction.Behaviors>
        </TextBlock>

        <Button Grid.Row="3"
                Width="100"
                HorizontalAlignment="Center"
                Command="{Binding SignInCommand}"
                Content="Sign In"
                FontSize="12"
                FontWeight="SemiBold"
                Style="{StaticResource SignInButtonStyle}">

            <interactivity:Interaction.Behaviors>
                <behaviors:Offset AutomaticallyStart="True"
                                  Delay="570"
                                  OffsetX="0"
                                  OffsetY="-20"
                                  Duration="1000" />
            </interactivity:Interaction.Behaviors>
        </Button>
    </Grid>
</UserControl>
