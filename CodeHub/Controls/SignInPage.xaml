<UserControl x:Class="CodeHub.Controls.SignInPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkitControl="using:Microsoft.Toolkit.Uwp.UI.Controls"
             d:DesignHeight="400"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/green.jpeg" />
        </Grid.Background>

        <Grid>
            <interactivity:Interaction.Behaviors>
                <behaviors:Blur AutomaticallyStart="True"
                                Delay="0"
                                Value="40"
                                Duration="0" />
            </interactivity:Interaction.Behaviors>
        </Grid>

        <StackPanel VerticalAlignment="Center"
                    Background="Transparent"
                    Orientation="Vertical">
            <toolkitControl:DropShadowPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            BlurRadius="8"
                                            OffsetX="2"
                                            OffsetY="2"
                                            ShadowOpacity="0.7"
                                            Color="Black">
                <Image x:Name="AppLogoImage"
                       Width="90"
                       VerticalAlignment="Bottom"
                       Source="/Assets/Images/appLogoPurple.png" />
            </toolkitControl:DropShadowPanel>
            <toolkitControl:DropShadowPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            BlurRadius="8"
                                            OffsetX="2"
                                            OffsetY="2"
                                            ShadowOpacity="0.7"
                                            Color="Black">
                <TextBlock Margin="0,0,0,8"
                           FontSize="30"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Text="CodeHub"
                           TextAlignment="Center" />
            </toolkitControl:DropShadowPanel>

            <TextBlock Margin="0,0,0,40"
                       FontSize="18"
                       Foreground="White"
                       Text="A Client for GitHub"
                       TextAlignment="Center" />

            <TextBlock x:Uid="signInTips"
                       Margin="0,8,0,20"
                       FontSize="15"
                       Foreground="White"
                       TextAlignment="Center" />
            <toolkitControl:DropShadowPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            BlurRadius="8"
                                            OffsetX="2"
                                            OffsetY="2"
                                            ShadowOpacity="0.7"
                                            Color="Black">
                <Button x:Uid="signIn"
                        Width="140"
                        Padding="8"
                        HorizontalAlignment="Center"
                        Command="{Binding SignInCommand}"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Style="{StaticResource SignInButtonStyle}" />
            </toolkitControl:DropShadowPanel>

        </StackPanel>

    </Grid>
</UserControl>
